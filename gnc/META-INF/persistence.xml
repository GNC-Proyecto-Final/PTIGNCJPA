		<class>entidades.ConsumoAlimentoTernera</class>
		<class>entidades.ConsumoAlimentoTerneraPK</class>
		<class>entidades.ConsumoMedicamentoTernera</class>
		<class>entidades.ConsumoMedicamentoTerneraPK</class>
		<class>entidades.Enfermedad</class>
		<class>entidades.EnfermedadTernera</class>
		<class>entidades.EnfermedadTerneraPK</class>
		<class>entidades.Guachera</class>
		<class>entidades.Madre</class>
		<class>entidades.Medicamento</class>
		<class>entidades.Padre</class>
		<class>entidades.Peso</class>
		<class>entidades.Ternera</class>
		<class>entidades.Unidad</class>
		<class>entidades.Usuario</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="validate"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
